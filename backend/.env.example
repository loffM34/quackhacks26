# ──────────────────────────────────────────────────────────
# Backend Environment Variables
# ──────────────────────────────────────────────────────────
# Copy to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# ── Provider Selection ──
# Options: "api" (external APIs) or "python" (local model service)
DETECT_PROVIDER=api

# ── External API Keys (for DETECT_PROVIDER=api) ──
# Set API_PROVIDER_NAME to one of: gptzero, sapling, huggingface, originality
API_PROVIDER_NAME=gptzero
GPTZERO_API_KEY=
ORIGINALITY_API_KEY=
SAPLING_API_KEY=
HUGGINGFACE_API_KEY=

# ── Hive AI Image Detection (via NVIDIA NIM) ──
NVIDIA_API_KEY=

# ── Python Model Service (for DETECT_PROVIDER=python) ──
MODEL_SERVICE_URL=http://localhost:8000

# ── Cache ──
CACHE_TTL_MS=600000
CACHE_MAX_SIZE=500

# ── Rate Limiting ──
RATE_LIMIT_PER_MINUTE=30

# ── CORS ──
# Comma-separated additional allowed origins (chrome-extension:// is always allowed)
ALLOWED_ORIGINS=http://localhost:3000

# ── Content Limits ──
MAX_TEXT_LENGTH=5000
MAX_IMAGE_SIZE=2097152
